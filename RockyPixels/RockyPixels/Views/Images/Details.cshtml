@model RockyPixels.Models.Image

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Image</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            <!--@Html.DisplayFor(model => model.Data)-->
            
            <label asp-for="Data" class="control-label h2"></label>
            @{
                var base64 = Convert.ToBase64String(Model.Data);
                var Image = String.Format("data:image/gif;base64,{0}", base64);
            }
            <img src="@Image" alt="" class="img-fluid" style="max-width:200px;max-height:200px">
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Metadata)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Metadata)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ImageId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
